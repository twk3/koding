@import "lib/core.fonts"
@import "lib/core.fn"

@css {
/*
Team Group Creation stylesheet
team.group.creation.styl
*/
}

.content-page.Team

  // GENERIC SIGNUPFORM CUSTOMIZATIONS

  .kdtabpaneview .TeamsModal.TeamsModal--groupCreation

    &.alreadyMember:after
      hidden()

    > h5 i
      color                 #56a2d3

    .login-input-view
      rel()
      &.tr
        bg                  color transparent


  // DOMAIN TAB STYLE CUSTOMIZATIONS

  .TeamsModal.TeamsModal--domain
    &.not-supported-for-mobile
      display               none

    .login-input-view
      overflow              hidden
      width                 100%
      border                1px solid #d9d9d9
      rounded               3px
      dFlex()

      &.validation-error
        border-color        #f13a18

      input.kdinput
        font-size           18px
        text-align          left
        padding             10px 14px 14px
        height              49px
        vendor              flex-grow, 1
        border              none
        width               auto
        max-width           calc(100% \- 120px)
        box-shadow          none !important
        outline             none

      span
        color               #999
        font-weight         400
        font-size           18px
        line-height         25px
        padding             10px 14px 14px
        margin              0
        border-left         1px solid #d9d9d9
        bg                  color, #fafafa
        borderBox()

  // ALLOWED DOMAIN TAB STYLE CUSTOMIZATIONS

  .kdtabpaneview.email-domains .TeamsModal

    > h5
      width                 100%

    .login-input-view

      &:first-child
        text-align          left

      input.kdinput.checkbox
        margin-right        12px

      input.kdinput
        padding-left        61px
        text-align          left

      span
        abs                 1px 0 0 1px
        size                42px 42px
        border-right        1px solid #DBDBDB
        text-align          center

  // INVITE TAB STYLE CUSTOMIZATIONS

  .kdtabpaneview.invite .TeamsModal

    .login-input-view
        margin-bottom       5px

    p.dim
      abs                   0 0 26px 44px
      width                 calc(100% - 250px)
      text-align            left


    .TeamsModal-button.add
      float                 none
      margin                15px 0 0
      display               block
      width                 auto

  // JOIN TAB STYLE CUSTOMIZATIONS

  .kdtabpaneview.join

    .TeamsModal

      &.alreadyMember
        margin-bottom       0px

  // USERNAME TAB STYLE CUSTOMIZATIONS

  .kdtabpaneview.register .TeamsModal
  .kdtabpaneview.username .TeamsModal

    > h5
      width                 335px
      &.full
        width               100%

    .PasswordStrength
      top                   -30px
      left                  5px
      rounded               3px
      width                 calc(100% - 10px)
      z-index               4

    p.dim
      margin                25px auto


  // STACKS TAB STYLE CUSTOMIZATIONS

  .kdtabpaneview.stacks .TeamsModal

    > h5
      width                 100%
      margin-bottom         40px

    figure
      bg                    image, url('/a/site.landing/images/teams/stacks.jpg')
      size                  462px 246px
      bg                    size cover
      display               block
      border                6px solid #efefef
      rounded               3px
      borderBox()

  // CONGRATS TAB STYLE CUSTOMIZATIONS

  .kdtabpaneview.congrats .TeamsModal

    > h4
      margin                20px 0

    > h5
      width                 100%
      margin-bottom         20px

    figure.congrats
      r-sprite              teams congrats
      margin                0 auto

    button.TeamsModal-button.TeamsModal-button--green
      width                 100%
      float                 none
      text-transform        none
